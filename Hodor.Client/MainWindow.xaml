<Window x:Class="Hodor.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="471">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Click="ButtonHodorize_Click" Margin="8">
                Hodorize
            </Button>
            <Button Click="ButtonDehodorize_Click" Margin="8">
                Dehodorize
            </Button>
            <TextBlock x:Name="txtMessage" HorizontalAlignment="Center" FontWeight="Bold" Foreground="Red" />
        </StackPanel>
    </Grid>
</Window>
